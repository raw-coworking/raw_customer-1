{
    "version":2,
    "builds": [{
        "src": "Customer_data/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    },
    {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config":{
            "distDir": "staticfiles_build"
        }
    }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "Customer_data/wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "Customer_data/wsgi.py"
        }
    ]
}